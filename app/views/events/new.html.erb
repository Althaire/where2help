<div class="row">
<h1>New Event</h1>
<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :shift_length %>
    <%= f.number_field :shift_length %>
  </div>


  <h2>Shifts</h2>
  <%= f.nested_fields_for :shifts do |ff| %>

    <%= ff.remove_nested_fields_link %>

    <div class="field">
      <%= ff.label :volunteers_needed %>
      <%= ff.number_field :volunteers_needed %>
    </div>

    <div class="field">
      <%= ff.label :starts_at %>
      <%= ff.datetime_field :starts_at %>
    </div>

    <div class="field">
      <%= ff.label :ends_at %>
      <%= ff.datetime_field :ends_at %>
    </div>

  <% end %>
  <%= f.add_nested_fields_link :shifts %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
