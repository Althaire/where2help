<%= div_for(need, class: 'row list-item') do %>
  <div class="col-sm-4 col-lg-3 col-lg-offset-1">
    <div class="media">
      <div class="media-left"><%= link_to icon_for(need), need_path(need) %></div>
      <div class="media-body">
        <h4 class="media-heading"><%= need.i18n_category %></h4>
        <%= link_to 'Details', need_path(need) %>
        <div class="visible-xs time">
          <i class="fa fa-calendar-o fa-fw"></i>
          <%= I18n.localize(need.start_time, format:'%a, %d. %b %H:%M') %> - <%= need.end_time.strftime('%H:%M') %> Uhr
        </div>
        <div class="visible-xs place">
          <i class="fa fa-map-marker fa-fw"></i>
          <%= need.city %>, <%= need.location %>
        </div>
      </div>
    </div>
  </div>

  <div class="hidden-xs col-sm-4 col-lg-4">
    <div class="time">
      <i class="fa fa-calendar-o fa-fw"></i>
      <%= I18n.localize(need.start_time, format:'%a, %d. %b %H:%M') %> - <%= need.end_time.strftime('%H:%M') %> Uhr
    </div>
    <div class="place">
      <i class="fa fa-map-marker fa-fw"></i>
      <%= need.city %>, <%= need.location %>
    </div>
  </div>

  <div id="<%= dom_id(need, :button) %>" class="col-sm-4 col-lg-3 text-center">
    <%= render 'volunteerings/button', need: need %>
  </div>
<% end %>
