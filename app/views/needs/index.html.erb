<%- model_class = Need -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(count: 2) %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%= model_class.human_attribute_name(:end_time) %></th>
      <th><%= model_class.human_attribute_name(:volunteers_needed) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @needs.each do |need| %>
      <tr>
        <td><%= link_to need.id, need_path(need) %></td>
        <td><%= need.location %></td>
        <td><%= l need.start_time %></td>
        <td><%= l need.end_time %></td>
        <td><%= need.volunteers_needed %></td>
        <td><%= need.city %></td>
        <td><%= need.category %></td>
        <td><%=l need.created_at %></td>
        <td>
          <%= link_to edit_need_path(need), :class => 'btn btn-default btn-xs' do %>
            <i class="fa fa-pencil"></i>
          <% end %>
          <%= link_to need_path(need),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-primary' do %>
            <i class="fa fa-times"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_need_path,
            :class => 'btn btn-info' %>
