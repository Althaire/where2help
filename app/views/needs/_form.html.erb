<%= simple_form_for @need, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :start_time %>
  <%= error_span(@need[:start_time]) %>
  <%= f.input :end_time %>
  <%= error_span(@need[:end_time]) %>
  <%= f.input :location %>
  <%= error_span(@need[:location]) %>
  <%= f.input :city %>
  <%= error_span(@need[:city]) %>
  <%= f.input :category, collection: Need.categories_for_select %>
  <%= error_span(@need[:category]) %>
  <%= f.input :volunteers_needed %>
  <%= error_span(@need[:volunteers_needed]) %>

  <%= f.button :submit, class: 'btn-primary' %>  
  <%= link_to t('.destroy', default: t('helpers.links.destroy')),
                f.object,
                data: { confirm: 'Are you sure?' },
                method: :delete, class: 'btn btn-danger' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                root_path, class: 'btn btn-default' %>
<% end %>
