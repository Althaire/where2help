<%= simple_form_for @need, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :location %>
  <%= f.input :city %>
  <%= f.input :category, collection: Need.categories_for_select %>
  <%= f.input :volunteers_needed %>

  <%= f.button :button,
                data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>" },
                class: 'btn-primary' %>
  <%= link_to t('.destroy', default: t('helpers.links.destroy')),
                f.object,
                data: { confirm: 'Are you sure?', disable_with: "<i class='fa fa-spinner fa-spin'></i>" },
                method: :delete, class: 'btn btn-danger' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                root_path, class: 'btn btn-default' %>
<% end %>