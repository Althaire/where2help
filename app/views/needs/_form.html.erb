<%= simple_form_for @need, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :location %>
  <%= error_span(@need[:location]) %>
  <%= f.input :start_time %>
  <%= error_span(@need[:start_time]) %>
  <%= f.input :end_time %>
  <%= error_span(@need[:end_time]) %>
  <%= f.input :volunteers_needed %>
  <%= error_span(@need[:volunteers_needed]) %>
  <%= f.input :city %>
  <%= error_span(@need[:city]) %>
  <%= f.input :category %>
  <%= error_span(@need[:category]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                needs_path, :class => 'btn btn-default' %>
<% end %>
