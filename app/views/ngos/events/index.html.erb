<div class="row">
  <div class="row">
    <div class="col-xs-2">
      <%= link_to 'Add an Event', new_ngos_event_path, class: 'btn btn-default' %>
    </div>
  </div>
  <%#<div class="col-xs-2">%>

  <%#</div>%>
  <div class="col-xs-10">
    <div class="row">
      <div class="col-xs-12">
        <% if @events.select { |event| event.earliest_shift.starts_at >= DateTime.now }.size > 0 %>
          <h2>Upcoming:</h2>
          <div class="list-group">
            <%= render @events.select { |event| event.earliest_shift.starts_at >= DateTime.now }  %>
          </div>
        <% end %>
        <% if @events.select { |event| event.earliest_shift.starts_at < DateTime.now }.size > 0 %>
          <h2>Past:</h2>
          <div class="list-group">
            <%= render @events.select { |event| event.earliest_shift.starts_at < DateTime.now }  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
