<div class="panel-body row">
  <div class="col-xs-3 col-sm-1 text-left">
    <span class="fa-stack fa-2x">
      <i class="fa fa-calendar-o fa-stack-2x"></i>
      <strong class="fa-stack-1x calendar-text">
        <%= I18n.localize(shift.starts_at, format:'%b') %>
      </strong>
      <strong class="fa-stack-1x calendar-text">
        <%= shift.starts_at.day %>
      </strong>
    </span>
  </div>
  <div class="col-xs-7 col-sm-10">
    <%= shift.starts_at.to_s(:time) %> - <%= shift.ends_at.to_s(:time) %><br/>
    <strong><%= shift.event.title %></strong><br>
    <span><%= shift.event.address %></span>
  </div>
  <div class="col-xs-2 col-sm-1">
    <span class="badge <%= badge_for(shift, current_user) %> pull-right"><%= shift.volunteers_count %> / <%= shift.volunteers_needed %></span>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">
  <% shift.users.each_with_index do |user, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= user.first_name %> <%= user.last_name %></td>
      <td><%= user.email %></td>
      <td>
        <% user.languages.each do |language| %>
         <span class="label label-default"><%= language.name %></span>
       <% end %>
     </td>
     <td>
       <% user.abilities.each do |ability| %>
         <span class="badge badge-default"><%= ability.name %></span>
       <% end %>
     </td>
   </tr>
  <% end %>
</table>
<br/><br/>
