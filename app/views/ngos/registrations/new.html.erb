<%= bootstrap_devise_error_messages! %>
<div class="row">
  <div class="col-sm-6 col-sm-push-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>NGO registrieren</h4>
      </div>

      <% if User.count == 0 %>
        <div class="alert alert-info" role="alert">
          Sie erzeugen jetzt den ersten Bunutzer. Dieser bekommt Administrationsrechte zugewiesen.
        </div>
      <% end %>

      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: ngos_sign_up_path, html: { role: "form" }) do |f| %>
          <%= render 'fields', f: f %>
        <% end %>
      </div>
    </div>
    <%= render 'devise/shared/links' %>
  </div>
  <div class="col-sm-6 col-sm-pull-6">
    explanation stuff...
  </div>
</div>
