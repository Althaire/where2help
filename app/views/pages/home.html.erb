<div class="jumbotron text-center">
  <div class="jumbotron-contents">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <%= image_tag 'logo.svg', class: 'img-responsive logo-img' %>
      </div>
      <div class="col-xs-12">
        <h3><%= t('.headline') %></h3>
      </div>
      <div class="col-xs-12 col-sm-5 col-sm-offset-1 col-md-4 col-md-offset-2">
        <%= link_to new_user_registration_path, class: 'btn-register' do %>
          <i class="fa fa-user" aria-hidden="true"></i> <%= t('.sign_up_user') %>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-5 col-md-4">
        <%= link_to new_ngo_registration_path, class: 'btn-register' do %>
          <i class="fa fa-users" aria-hidden="true"></i> <%= t('.sign_up_ngo') %>
        <% end %>
      </div>
      <div class="col-xs-12">
        <h3><i class="fa fa-user" aria-hidden="true"></i> <%= t('.subline_user') %><h3>
        <h3><i class="fa fa-users" aria-hidden="true"></i> <%= t('.subline_ngo') %></h3>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <%= simple_format t('.landing_page_text') %>
  </div>
</div>
